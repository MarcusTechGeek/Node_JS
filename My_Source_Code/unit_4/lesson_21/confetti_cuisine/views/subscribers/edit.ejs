<div class="data-form">
  <!-- Form for editing a subscriber -->
  <form class="form-signin" action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>" method="POST">
    <!-- Form title -->
    <h2 class="form-signin-heading">Edit subscriber:</h2>
    
    <!-- Name input field -->
    <label for="inputName">Name</label>
    <input type="text" name="name" id="inputName" class="form-control" value="<%= subscriber.name %>" placeholder="Name" autofocus>
    
    <!-- Email input field -->
    <label for="inputEmail">Email address</label>
    <input type="email" name="email" id="inputEmail" class="form-control" value="<%= subscriber.email %>" placeholder="Email address" required>
    
    <!-- Zip code input field -->
    <label for="inputZipCode">Zip Code</label>
    <input type="text" name="zipCode" id="inputZipCode" pattern="[0-9]{5}" class="form-control" value="<%= subscriber.zipCode %>" placeholder="Zip Code" required>
    
    <!-- Submit button -->
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>
