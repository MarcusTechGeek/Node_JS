<h1 class="center">Subscriber Data for <%= subscriber.name %></h1>

<!-- Subscriber data table -->
<table class="table">
  <!-- Name row -->
  <tr>
    <th>Name</th>
    <td><%= subscriber.name %></td>
  </tr>
  <!-- Email row -->
  <tr>
    <th>Email</th>
    <td><%= subscriber.email %></td>
  </tr>
  <!-- Zip Code row -->
  <tr>
    <th>Zip Code</th>
    <td><%= subscriber.zipCode %></td>
  </tr>
</table>

<!-- Associated courses information -->
<p>This subscriber has <%= subscriber.courses.length %> associated course(s)</p>

<!-- Edit Subscriber Details button -->
<div>
  <a class="button" href="<%=`/subscribers/${subscriber._id}/edit`%>">Edit Subscriber Details</a>
</div>

<!-- Delete Subscriber button -->
<div>
  <a class="button" href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>

<!-- View all subscribers button -->
<div>
  <a class="button" href="/subscribers">View all subscribers</a>
</div>
