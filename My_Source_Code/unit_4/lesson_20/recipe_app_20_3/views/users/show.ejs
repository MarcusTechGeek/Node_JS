<h1>User Data for <%= user.fullName %></h1>

<table class="table">
  <!-- Display user's full name -->
  <tr>
    <th>Name</th>
    <td><%= user.fullName %></td>
  </tr>
  <!-- Display user's email -->
  <tr>
    <th>Email</th>
    <td><%= user.email %></td>
  </tr>
  <!-- Display user's zip code -->
  <tr>
    <th>Zip Code</th>
    <td><%= user.zipCode %></td>
  </tr>
  <!-- Display user's password (hidden) -->
  <tr>
    <th>Password</th>
    <td class="hidden-text"><%= user.password %></td>
  </tr>
</table>

<% if (user.subscribedAccount) { %>
  <!-- Display message if user has a subscribed account -->
  <h4 class="center"> This user has a
    <a href="<%=`/subscribers/${user.subscribedAccount}` %>">
      subscribed account</a>.
  </h4>
<% } %>

<div>
  <!-- Button to view all users -->
  <a class="button" href="/users">View all users</a>
</div>
<div>
  <!-- Button to edit user details -->
  <a class="button" href="<%=`/users/${user._id}/edit`%>">
    Edit User Details
  </a>
</div>
<div>
  <!-- Button to delete user with confirmation -->
  <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>
