<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1">
    <title>Recipe App</title>
    <link rel="shortcut icon" type="image/png" href="/images/icon.png" /> <!-- Favicon -->
    <link rel="stylesheet" href="/css/bootstrap.css"> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/recipe_app.css"> <!-- Custom CSS for the Recipe App -->
</head>

<body>
    <!-- Navigation Section -->
    <div id="nav">
        <div class="col-sm nav-align">
            <h1 id="title">Recipe App</h1> <!-- Title of the App -->
        </div>
        <div class="col-sm nav-align">
            <!-- Navigation Links -->
            <a href="/">
                <span class="button">Home</span>
            </a>
            <a href="/courses">
                <span class="button">Cooking Courses</span>
            </a>
            <a href="/contact">
                <span class="button">Contact</span>
            </a>
        </div>
        <div class="login-status">
            <!-- User Login Status -->
            <% if (loggedIn) { %>
            <!-- If user is logged in -->
            <div class="bubble logged-in">
                Logged in as <a href="<%=`/users/${currentUser._id}`%>">
                    <%= currentUser.fullName %></a>
            </div>
            <div class="log-out">
                <a href="/users/logout">Log out</a> <!-- Logout link -->
            </div>
            <%} else {%>
            <!-- If user is not logged in -->
            <div class="bubble log-in">
                <a href="/users/login">Log In</a> <!-- Login link -->
            </div>
            <% } %>
        </div>
    </div>

    <!-- Flash Messages Section -->
    <div class="flashes">
        <% if (flashMessages) { %>
        <% if (flashMessages.success) { %>
        <!-- Success Flash Message -->
        <div class="flash success">
            <%= flashMessages.success %>
        </div>
        <% } else if (flashMessages.error) { %>
        <!-- Error Flash Message -->
        <div class="flash error">
            <%= flashMessages.error %>
        </div>
        <% } %>
        <% } %>
    </div>

    <!-- Main Content Container -->
    <div class="container">
        <%- body %> <!-- Body Content Placeholder -->
    </div>

</body>

</html>
